{# liste des modules  #}

{% extends 'base.html.twig' %}

{% block title %}Liste des modules{% endblock %}

{% block body %}

<section id="modules">
    <h2>Liste des modules</h2>

    <table class="table table-striped">
        <thead>
          <tr class="table-info">
            <th scope="col">#</th>
            <th scope="col">Module</th>
            <th scope="col">Categorie</th>
    
          </tr>
        </thead>
        <tbody>
    {% set i = 1 %}
    {% for module in modules %}
    <tr>
        <td>{{i}} </td>
        {% set i = i + 1 %}
        <td>{{ module }} 
          <a href="{{ path('edit_module', {'id': module.id}) }}"><i class="fa-solid fa-pen"></i></a>
          {# si connecté et si admin  #}
          {% if app.user and "ROLE_ADMIN" in app.user.roles %}
            <a href="{{ path('delete_module', {'id': module.id}) }}"><i class="fa-solid fa-x"></i></a>
          {% endif %}
        </td>
        <td>{{ module.categorie }}</td>
    
    </tr>
    {% endfor %}
        </tbody>
    </table>

    {% if app.user %}
      <a class="add-btn" href="{{ path('new_module') }}"><button>Créer un module</button></a>
    {% endif %}
</section>
{% endblock %}
