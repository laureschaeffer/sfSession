<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div id="wrapper">
            {# message de success #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {# message d'erreur #}
            {% for msg in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ msg }}
                </div>
            {% endfor %}

            <header>
                {# nav sur la gauche  #}
                <nav id="side-nav">
                    <ul>
                        <li><a href="{{ path('app_formation')}}">Formations</a></li>
                        <li><a href="{{ path('app_session')}}">Sessions</a></li>
                        <li><a href="{{ path('app_module')}}">Modules</a></li>
                        <li><a href="{{ path('app_categorie')}}">Catégories</a></li>
                        <li><a href="{{ path('app_stagiaire')}}">Stagiaires</a></li>
                        {# si connecté et si admin  #}
                        {% if app.user and app.user.roles[0] == "ROLE_ADMIN" %}
                        <li><a href="{{ path('app_admin') }}">Dashboard</a></li>
                        {% endif %}
                    </ul>
                </nav>
                {# 2e nav sur le haut  #}
                <nav id="top-nav">
                    <h2>Adminify</h2>
                    {# barre de recherche, possibilite de faire un formulaire a la main  #}
                    <form action="{{ path('app_search')}}" method="GET">
                        <input type="search" class="search" name="search" placeholder="Search">
                        <button type="submit" name="submit">Valider</button>
                    </form>
                        {# si l'utilisateur est connecté  #}
                        {% if app.user %}
                        <a href="{{ path('app_profil') }}">{{ app.user }}</a>
                        <a href="{{ path('app_logout') }}">Logout</a>
            
                        {% else %}
                            <a href="{{ path('app_register') }}">Register</a>
                            <a href="{{ path('app_login') }}">Login</a>
                        {% endif %}
                    </nav>
            </header>
            <div id="main-page">
                {% block body %}{% endblock %}
            </div>

        </div>

        {# {% block javascripts %}
            
        {% endblock %} #}
        <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
        <script src="{{ asset('gsf.js') }}"></script>
    </body>
</html>
