{# formulaire de modification d'une session #}

{% extends 'base.html.twig' %}

{% block title %}Modifier une session{% endblock %}

{% block body %}

<section class="sessions-form">

    <h2>Modifier une session</h2>
    
    {{ form_start(form) }}
    
    
    <div class="row">
        
        
        {{ form_row(form.formation) }}
        
        <div class="col-sm">
            {{ form_row(form.dateDebut) }}
        </div>
        <div class="col-sm">
            {{ form_row(form.dateFin) }}
        </div>
        {{ form_row(form.nbPlace) }}
        {{ form_row(form.user) }}
        
        <div class="btn-container">
            <div class="add-btn">
                {{ form_row(form.Valider) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

</section>

{% endblock %}