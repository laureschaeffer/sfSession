{% extends 'base.html.twig' %}

{% block title %}Pannel administrateur{% endblock %}

{% block body %}

<h2>Liste des utilisateurs</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Pseudo</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        {# affiche tous les users de la bdd, sauf son profil  #}
            {% if user != app.user %}
                <tr>
                    <td><a href="{{ path('show_user', {'id': user.id}) }}">{{user}}</a></td>
                    <td>{{user.email}}</td>
                    <td>{{user.roleStr}}</td>
                    {# <td><a href="{{path('upgrade_role', {'id': user.id})}}">Changer</a></td>      #}
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
      </table>

<strong>Rappel qu'un admin seulement peut gérer les utilisateurs et leurs rôles</strong>

{% endblock %}
