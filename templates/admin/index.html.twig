{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

<h1>Liste des utilisateurs</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Pseudo</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Changer de rôle</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        {# affiche tous les users de la bdd, sauf son profil  #}
            {% if user != app.user %}
                <tr>
                    <th scope="row">{{user.id}}</th>
                    <td>{{user}}</td>
                    <td>{{user.email}}</td>
                    <td>{{user.roleStr}}</td>
                    <td><a href="{{path('upgrade_role', {'id': user.id})}}">Changer</a></td>     
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
      </table>

<strong>Rappel qu'un admin seulement peut gérer les utilisateurs et leurs rôles</strong>

{% endblock %}
